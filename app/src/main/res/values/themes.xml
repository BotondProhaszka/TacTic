<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TacTic" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/cerulean_blue</item>
        <item name="colorPrimaryVariant">@color/mustard</item>
        <item name="colorOnPrimary">@color/asphalt</item>

        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/wine</item>
        <item name="android:background">@color/putty</item>
        <item name="colorButtonNormal">@color/clay</item>
        <item name="android:bottomLeftRadius">9dp</item>
        <item name="android:bottomRightRadius">9dp</item>
        <item name="android:topLeftRadius">9dp</item>
        <item name="android:topRightRadius">9dp</item>
        <item name="dialogCornerRadius">10dp</item>
        <item name="android:keepScreenOn">true</item>

    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

</resources>